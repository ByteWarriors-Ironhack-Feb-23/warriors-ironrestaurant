<h1>Byte Warrior's Bites</h1>
<h2>Best pizzas in town!</h2>

<img src="/images/home.jpg" />


<section class="card">
    <h3>Search by price:</h3>

    <form method="GET" action="/pizzas">

        <label>
            Maximum price: 
            <input type="number" min="1" max="99" name="maxPrice">
        </label>

        <button type="submit">Search</button>
    </form>
</section>


<section class="card">
    <h3>Login form:</h3>

    <form method="POST" action="/login">
    
        <label>
            Email:
            <input type="email" name="email">
        </label>

        <label>
            Password:
            <input type="password" name="pw">
        </label>

        <button type="submit">Login</button>
    </form>

</section>

{{> ctaBuyNow}}

